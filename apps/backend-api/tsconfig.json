{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./src/*"],
      "@stack/shared-types": ["../../packages/shared-types/src"]
    }
  },
  "include": [
    "src/**/*",
    "../../packages/shared-types/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
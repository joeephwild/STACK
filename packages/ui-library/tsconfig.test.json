{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "@testing-library/jest-dom"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./"]
  },
  "include": [
    "src/**/*",
    "__tests__/**/*",
    "**/*.test.*",
    "**/*.spec.*",
    "nativewind-env.d.ts",
    "jest.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}